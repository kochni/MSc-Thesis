\typeout{Page style with ETH logo. Released 19 February 1988}
\def\es{} % eat space for nice formatting

%
% DEFINE INDEPENDENT SIZE
%
\def\lhsize{\@setsize\lhsize{12pt}\xpt\@xpt} % text size for letter head

%
% PAGE LAYOUT
%
\headheight 1.5cm                  % Height for ETH logo
%
\RequirePackage{ETHSfSlogo}
%
% DEFINE THE PAGE STYLE
%
\def\ps@ETHform{%
  \def\@oddhead{\hspace*{-5pt}\raise 20pt\hbox{\ETHlogo}\hfill
    \raise 19pt\hbox{\SfSlogo}\hspace*{-5pt}}   
% \setlength{\logounitlength}{0.06mm}
  \def\@oddfoot{}            % Empty foot
  \let\@evenhead\@oddhead    % Same for evenhead/foot
  \def\@evenfoot{}
  \thispagestyle{empty}
}
